.log-out
  margin 1rem
  background none
  background #EE6E73
  height 4rem
  line-height 4rem
  color #fff

  &:hover
    background #EE6E73
    color #fff

.profile
  padding 0.5rem
  height 100%
  box-sizing border-box
  position relative

  span
    color #fff
    float left
    font-size 2rem
    letter-spacing 1px
    line-height 5rem
    padding-left 1rem

  .img
    float left
    box-sizing border-box
    background $block-background
    border-radius 50%
    box-shadow $global-box-shadow
    img
      box-sizing border-box
      padding 1rem
      height 100%
      width auto

  &:hover
    .dd
      opacity 1
      visibility visible

.room-form
  padding $block-padding
  box-shadow $global-box-shadow
  background $block-background

.room
  width 25%
  float left
  box-sizing border-box
  margin-top 2rem
  padding 0 1rem

  &:nth-child(4n)
    padding-right 0

  &:nth-child(1),
  &:nth-child(4n + 1)
    padding-left 0

  .inner
    background $block-background
    box-shadow $global-box-shadow

  .title
    padding 1rem
    color #ffffff
    background $main-background
    font-size 2rem
    text-transform uppercase
    letter-spacing 1px

  .main-block
    height 25rem
    padding 1rem
    .description
      h3
        font-size 2rem
        margin 0

  .author
    height 4rem
    background $main-background
    position relative
    padding 1rem
    overflow hidden

    span
      color #fff
      position absolute
      font-size 1.5rem
      line-height 4rem
      padding-left 1rem

    .img
      float left
      box-sizing border-box
      background $block-background
      border-radius 50%
      box-shadow $global-box-shadow
      img
        box-sizing border-box
        padding 1rem
        height 100%
        width auto
