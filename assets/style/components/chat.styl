.chat-window
  position fixed
  bottom 1rem
  right 1rem
  width 50rem
  height 0
  background $block-background
  box-shadow $global-box-shadow
  transition all 0.3s ease-in-out
  z-index 10
  opacity 0
  visibility hidden

  &.active
    height 50rem
    opacity 1
    visibility visible

  .view
    height 45.6rem
    margin-top 4.4rem

  ul
    list-style-type none
    padding 2rem
    height 100%
    overflow-y auto


  .message-view
    height 87%

  .message-view,
  .user-view
    padding 2rem
    box-sizing border-box
    margin-bottom 0

    li
      position relative
      background $main-background
      box-shadow $global-box-shadow
      padding 1rem
      min-height 5rem
      margin-bottom 2rem

      p
        padding-left 6rem
        padding-top 2rem
        color #fff
        font-size 1.5rem
        margin 0

      .aut
        position absolute
        top 1rem
        left 7rem
        color #fff

      .img
        position absolute
        left 1rem
        top 1rem
        float left
        box-sizing border-box
        background $block-background
        height 5rem
        width 5rem
        border-radius 50%
        box-shadow $global-box-shadow
        img
          box-sizing border-box
          padding 1rem
          height 100%
          width auto

  .user-view
    .aut
      position relative
      line-height 5rem
      font-size 2rem
    .status
      position absolute
      top 0
      right 0
      width 0.5rem
      height 100%
      background #ee6e73
      &.active
        background #43a047

.chat-button
  position fixed
  z-index 9
  bottom 1rem
  right 1rem
  transition all 0.3s ease-in-out

  &.active
    bottom 52rem

.new-message
  position absolute
  bottom 0
  margin 0
  width 100%
  input
    margin 0
    width 100%
    border none
    font-size 2rem
    padding 3rem 2rem
    border-top 2px solid #c1c1c1

.tabs

  position absolute
  width 100%
  z-index 8
  box-shadow $global-box-shadow

  span
    background lighten($main-background, 20)
    color #fff
    cursor pointer
    padding 1rem
    float left
    text-align center
    width 50%
    box-sizing border-box

    &.active
      background $main-background